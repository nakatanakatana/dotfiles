{
  "$schema": "https://opencode.ai/config.json",
  "theme": "solarized",
  "default_agent": "plan",
  "model": "opencode/kimi-k2.5-free",
  "small_model": "github-copilot/gpt-5.1-codex-mini",
  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",
      "buf *": "allow",
      "gh pr view *": "allow",
      "gh run view *": "allow",
      "git *": "allow",
      "git commit *": "ask",
      "git merge *": "ask",
      "git push *": "ask",
      "go build *": "allow",
      "go mod tidy": "allow",
      "go test *": "allow",
      "go test": "allow",
      "gofmt *": "allow",
      "golangci-lint *": "allow",
      "golangci-lint": "allow",
      "grep *": "allow",
      "grep": "allow",
      "head *": "allow",
      "ls *": "allow",
      "make *": "allow",
      "npm ci": "allow",
      "npm run *": "allow",
      "npm test": "allow",
      "npx tsc": "allow",
      "rg *": "allow",
      "sqlc *": "allow",
      "tail *": "allow",
      "tree": "allow",
      "wc *": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "codesearch": "allow",
    "edit": "allow",
    "external_directory": "deny",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "question": "allow",
    "skill": "allow",
    "task": "ask",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow"
  }
}
