{
  "context": {
    "fileName": [
      "AGENTS.md",
      "GEMINI.md"
    ]
  },
  "tools": {
    "autoAccept": true,
    "allowed": [
      "glob",
      "google_web_search",
      "list_directory",
      "read_file",
      "replace",
      "search_file_content",
      "web_fetch",
      "write_file",
      "activate_skill(gitlab-cli)",
      "run_shell_command(buf)",
      "run_shell_command(git add)",
      "run_shell_command(git diff)",
      "run_shell_command(git log)",
      "run_shell_command(git notes)",
      "run_shell_command(git show)",
      "run_shell_command(git status)",
      "run_shell_command(glab auth status)",
      "run_shell_command(glab ci status)",
      "run_shell_command(glab ci view)",
      "run_shell_command(glab issue list)",
      "run_shell_command(glab issue view)",
      "run_shell_command(glab mr list)",
      "run_shell_command(glab mr view)",
      "run_shell_command(go build)",
      "run_shell_command(go test)",
      "run_shell_command(golangci-lint)",
      "run_shell_command(grep)",
      "run_shell_command(ls)",
      "run_shell_command(mkdir)",
      "run_shell_command(npm ci)",
      "run_shell_command(npm run)",
      "run_shell_command(npm test)",
      "run_shell_command(rm -rf conductor/tracks/)",
      "run_shell_command(sqlc)"
    ],
    "shell": {
      "showColor": true,
      "enableInteractiveShell": false
    }
  },
  "mcp": {
    "allowed": ["playwright"]
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  },
  "experimental": {
    "skills": true,
    "useOSC52Paste": true,
    "cliHelpAgentSettings": {
      "enabled": true
    },
    "introspectionAgentSettings": {
      "enabled": true
    }
  },
  "general": {
    "preferredEditor": "vim",
    "previewFeatures": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "theme": "ANSI",
    "showStatusInTitle": true,
    "hideBanner": true,
    "hideTips": true,
    "showMemoryUsage": true,
    "showCitations": false,
    "footer": {
      "hideContextPercentage": false
    },
    "showModelInfoInChat": true,
    "accessibility": {
      "disableLoadingPhrases": true
    }
  },
  "features": {
    "checkpointing": {
      "enabled": true
    }
  }
}
