{
  "context": {
    "fileName": [
      "AGENTS.md",
      "GEMINI.md"
    ]
  },
  "tools": {
    "allowed": [
      "glob",
      "google_web_search",
      "read_file",
      "list_directory",
      "search_file_content",
      "web_fetch",
      "replace",
      "write_file",
      "run_shell_command(ls)",
      "run_shell_command(mkdir)",
      "run_shell_command(git status)",
      "run_shell_command(git log)",
      "run_shell_command(git show)",
      "run_shell_command(git commit)",
      "run_shell_command(go build)",
      "run_shell_command(go test)",
      "run_shell_command(golangci-lint)",
      "run_shell_command(npm ci)",
      "run_shell_command(npm run)"
    ],
    "shell": {
      "showColor": true,
      "enableInteractiveShell": false
    }
  },
  "experimental": {
    "skills": true,
    "useOSC52Paste": true,
    "cliHelpAgentSettings": {
      "enabled": true
    },
    "introspectionAgentSettings": {
      "enabled": true
    }
  },
  "general": {
    "preferredEditor": "vim",
    "previewFeatures": true,
    "vimMode": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "theme": "ANSI",
    "showStatusInTitle": true,
    "hideBanner": true,
    "hideTips": false,
    "hideFooter": true,
    "showMemoryUsage": true,
    "showCitations": false
  },
  "features": {
    "checkpointing": {
      "enabled": true
    }
  }
}
