defutf8 on
encoding utf-8 utf-8
defencoding utf-8
cjkwidth off
term xterm

escape ^Tt

# backticks to display information in the statusbar
backtick 1 0 0 /usr/local/bin/screen-mem-usage
backtick 2 0 0 /usr/local/bin/screen-cpu-usage

setenv cp ""
setenv cp "$cp%?%F"
setenv cp "$cp%{= ck}"
setenv cp "$cp%:"
setenv cp "$cp%{r .d}"
setenv cp "$cp%?"
setenv cp "$cp%n"
setenv cp "$cp "
setenv cp "$cp%t"
setenv cp "$cp%="
setenv cp "$cp%h"

caption always "$cp"

setenv hs ""
setenv hs "$hs%Y/%m/%d"
setenv hs "$hs "
setenv hs "$hs%02c"
setenv hs "$hs%{= .b}"
setenv hs "$hs Mem:%1`"
setenv hs "$hs%{-}"
setenv hs "$hs%{= .y}"
setenv hs "$hs Cpu:%2`%%"
setenv hs "$hs%{-}"
setenv hs "$hs%="
setenv hs "$hs%-w"
setenv hs "$hs%n"
setenv hs "$hs "
setenv hs "$hs%t"
setenv hs "$hs%+w"

hardstatus alwayslastline "$hs"
shelltitle "$ |bash"

termcap * 'G0:S0=\E(%.:E0=\E(B:TY=iso2022'
autodetach on
defflow off
crlf off
vbell off

termcapinfo xterm* ti@:te@

windowlist title  '%{= ck}Num Flags Title%=Hardstatus'
windowlist string '%3n %f%09= %t%=%h'


#split window
bind s eval split focus "select 0"

#resize
bind r eval 'command -c resize'
bind ^r eval 'command -c resize'
bind + eval 'command -c resize'
bind - eval 'command -c resize'
bind -c resize + eval 'resize +1' 'command -c resize'
bind -c resize - eval 'resize -1' 'command -c resize'

# window group
maxwin 1000
bind c eval 'screen 0' '@group local/'

select -
screen -t local/ 0 //group

# ssh_keybind
source .screenrc.ssh_keybind
select -

chdir
select 0
screen 0
